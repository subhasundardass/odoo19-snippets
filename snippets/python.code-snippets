        "prefix": "ounlink",
        "body": [
            "def unlink(self):",
            "    for rec in self:",
            "        if rec.state not in ('${1:draft}', '${2:cancelled}'):",
            "            raise UserError(_(",
            "                'You cannot delete a record in %s state.'",
            "            ) % rec.state)",
            "    return super().unlink()"
