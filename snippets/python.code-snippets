            "    for vals in vals_list:",
            "        if vals.get('name', _('New')) == _('New'):",
            "            vals['name'] = (",
            "                self.env['ir.sequence'].next_by_code('${1:sequence.code}')",
            "                or _('New')",
            "            )",
            "    return super().create(vals_list)"
        ],
        "description": "Odoo 19 — create_multi with auto sequence"
